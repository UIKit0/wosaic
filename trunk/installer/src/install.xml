<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    Configuration file to create the installer.
    Based on the IzPack sample installer
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
	    <appname>Wosaic</appname>
	    <appversion>0.1beta1</appversion>
	    <authors>
		    <author name="Scott Wegner" email="swegner2@gmail.com"/>
		    <author name="Carl-Erik Svensson" email="csvenss2@gmail.com"/>
	    </authors>
	    <url>http://code.google.com/p/wosaic</url>
	    <uninstaller write="yes">uninstaller.jar</uninstaller>
	    <javaversion>1.5</javaversion>
    </info>
    
    <variables>
    </variables>
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="yes">
	<!--
		Use the extwin look on Windows, because it blends better.
	-->
	    <laf name="looks">
		    <os family="windows">
			    <param name="variant" value="extwin" />
		    </os>
	    </laf>
	    <laf name="metouia">
		    <os family="unix" />
	    </laf>
	    <!--
	   	 The default Mac theme, Aqua, should look fine.
	    -->
    </guiprefs>
    
    <locale>
	    <langpack iso3="eng" />
    </locale>

    <!--
    	This line is needed so we can create shortcuts on Windows.
    -->
    <native type="izpack" name="ShellLink.dll"/>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
	    <res id="LicencePanel.licence" src="LICENSE"/>
	    <res id="InfoPanel.info" src="installer/src/intro.txt"/>
	    <res src="installer/src/shortcuts/def_shortcut_spec.xml" id="shortcutSpec.xml" />
	    <res src="installer/src/shortcuts/unix_shortcut_spec.xml" id="Unix_shortcutSpec.xml" />
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
	<panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
	    <pack name="Windows Application" required="yes" os="windows">
		<description>The Wosaic base application files for Winodows</description>
		<file src="bin/wosaic.jar" targetdir="$INSTALL_PATH/bin" override="true"/>
		<file src="libs" targetdir="$INSTALL_PATH" override="true"/>
		<file src="LICENSE" targetdir="$INSTALL_PATH" override="true"/>
		<file src="README" targetdir="$INSTALL_PATH" override="true"/>

		<file src="installer/src/shortcuts/Wosaic-launch.bat" targetdir="$INSTALL_PATH"
			override="true" />
		<file src="installer/src/shortcuts/Uninstall-launch.bat" targetdir="$INSTALL_PATH"
			override="true" />
        </pack>

	    <pack name="Linux Application" required="yes" os="unix">
		<description>The Wosaic base application files for Linux</description>
		<file src="bin/wosaic.jar" targetdir="$INSTALL_PATH/bin" override="true"/>
		<file src="libs" targetdir="$INSTALL_PATH" override="true"/>
		<file src="LICENSE" targetdir="$INSTALL_PATH" override="true"/>
		<file src="README" targetdir="$INSTALL_PATH" override="true"/>

		<file src="installer/src/shortcuts/Wosaic-launch.sh" targetdir="$INSTALL_PATH"
			override="true" />
		<file src="installer/src/shortcuts/Uninstall-launch.sh" targetdir="$INSTALL_PATH"
			override="true" />
		<executable targetfile="$INSTALL_PATH/Wosaic-launch.sh" stage="never" os="unix" />
		<executable targetfile="$INSTALL_PATH/Uninstall-launch.sh" stage="never" os="unix" />
        </pack>

	<pack name="Mac Application" required="yes" os="mac">
		<description>The Wosaic program, packaged as a Mac application</description>
		<file src="bin/Wosaic.app" targetdir="$INSTALL_PATH" override="true" />
		<executable targetfile="$INSTALL_PATH/Wosaic.app" stage="never" />
	</pack>

        <pack name="Docs" required="no" preselected="yes">
            <description>Documentation</description>
	    <file src="docs" targetdir="$INSTALL_PATH"/> 
        </pack>

        <pack name="Source" required="no" preselected="no">
            <description>The Wosaic source code.  Note: most users won't need this.</description>
	    <file src="src" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>
    
</installation>
